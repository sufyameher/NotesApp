<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/galleryRoot"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_bottom_sheet_rounded">

    <!-- Drag handle -->
    <View
        android:id="@+id/dragIndicator"
        android:layout_width="40dp"
        android:layout_height="4dp"
        android:layout_gravity="top|center_horizontal"
        android:layout_marginTop="12dp"
        android:background="@drawable/bg_drag_handle" />

    <!-- Main vertical layout: Text + RecyclerView -->
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="24dp"> <!-- leave space for drag handle -->

        <!-- Info Text -->
        <TextView
            android:id="@+id/textPermissionNote"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/this_app_can_only_access_photos_that_you_select"
            android:textColor="#888888"
            android:textSize="13sp"
            android:padding="10dp"
            android:textAlignment="center"
            tools:ignore="RtlCompat" />

        <!-- RecyclerView takes rest of the space -->
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:clipToPadding="false"
            android:paddingBottom="80dp" />
    </LinearLayout>

    <!-- Floating Done button -->
    <Button
        android:id="@+id/btnDone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_margin="12dp"
        android:text="@string/done"
        android:backgroundTint="#5B75E5"
        android:visibility="gone"/>
</FrameLayout>
