<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="7dp"
    android:gravity="center_vertical"
    android:layout_marginVertical="3dp"

    android:background="@drawable/bg_note_unselected">


<!-- Text content on the left -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                        <ImageView
                            android:id="@+id/ivPinned"
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:layout_marginEnd="6dp"
                            android:layout_marginTop="4dp"
                            android:visibility="gone"
                            android:src="@drawable/ic_pin_filled" />

                        <TextView
                            android:id="@+id/title"
                            android:textStyle="bold"
                            android:textSize="16sp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:ellipsize="end"
                            android:maxLines="1" />
                </LinearLayout>


                <TextView
                    android:id="@+id/dateAndDesc"
                    android:textSize="14sp"
                    android:textColor="#555555"
                    android:maxLines="1"
                    android:ellipsize="end"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="4dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/ivImageIndicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="4dp"
            android:scaleType="centerCrop"
            android:visibility="gone"
            android:background="@drawable/image_thumb_border"
            android:clipToOutline="true"/>


        <!-- Circle icon on the right -->
        <ImageView
            android:id="@+id/ivSelector"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_marginStart="12dp"
            android:src="@drawable/ic_circle"
            android:visibility="gone" />
</LinearLayout>
